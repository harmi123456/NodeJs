<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NodeJs</title>
</head>
<body>
    <h1>Welcome to Express Js</h1>

    <form action="/addData" method="post">
        <input type="text" placeholder="Enter Name : " name="name">
        <input type="text" placeholder="Enter Subject : " name="subject">
        <button type="submit" >Add Data</button>
    </form>

    <table border="1px" width="50%" >

        <thead>
            <tr style="padding: 20px; height: 40px;">
                <th>ID</th>
                <th>NAME</th>
                <th>SUBJECT</th>
                <th colspan="2">ACTION</th>
            </tr>
        </thead>

        
        <tbody>

           <%students.map((e,i) =>{%>
                <tr>
                    <td><%=e.id%></td>
                    <td><%=e.name%></td>
                    <td><%=e.subject%></td>
                    <td>
                        <button><a href="/editData/<%=e.id%>"> Edit </a></button>
                    </td>
                    <td>
                        <button><a href="/deleteData?id=<%=e.id%>"> Delete </a></button>
                    </td>
                </tr>   
                <%
            })%>
                
        </tbody>

    </table>
</body>
</html>